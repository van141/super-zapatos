@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>Articles Service</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">List of Articles</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: articles">
                    <li>
                        <strong><span data-bind="text: Name"></span></strong>: <span data-bind="text: Description"></span>
                        <small><a href="#" data-bind="click: $parent.getArticleDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>ID</td><td data-bind="text: detail().ArticleID"></td></tr>
                <tr><td>Name</td><td data-bind="text: detail().Name"></td></tr>
                <tr><td>Description</td><td data-bind="text: detail().Description"></td></tr>
                <tr><td>Price</td><td data-bind="text: detail().Price"></td></tr>
                <tr><td>Total in shelf</td><td data-bind="text: detail().TotalInShelf"></td></tr>
                <tr><td>Total in vault</td><td data-bind="text: detail().TotalInVault"></td></tr>
                <tr><td>Store id</td><td data-bind="text: detail().StoreID"></td></tr>
            </table>
        </div>
    </div>
    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Article</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addArticle">
                    <div class="form-group">
                        <label for="inputStore" class="col-sm-2 control-label">Store</label>
                        <div class="col-sm-10">
                            <select data-bind="options:stores, optionsText: 'Name', value: newArticle.Store"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newArticle">
                        <label for="inputName" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" data-bind="value:Name" />
                        </div>

                        <label for="inputDescription" class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputDescription" data-bind="value:Description" />
                        </div>

                        <label for="inputPrice" class="col-sm-2 control-label">Price</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputPrice" data-bind="value:Price" />
                        </div>

                        <label for="inputTotalInShelf" class="col-sm-2 control-label">Total In Shelf</label>
                        <div class="col-sm-10">
                            <input type="number" step="any" class="form-control" id="inputTotalInShelf" data-bind="value:TotalInShelf" />
                        </div>

                        <label for="inputTotalInVault" class="col-sm-2 control-label">Total In Vault</label>
                        <div class="col-sm-10">
                            <input type="number" step="any" class="form-control" id="inputTotalInVault" data-bind="value:TotalInVault" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>
